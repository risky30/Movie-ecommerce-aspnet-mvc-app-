@*
    cinemas
*@
@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}
<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1>Cinemas</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="#">Home</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> Cinemas listing</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- cinemas list section-->
<div class="page-single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="ceb-item-style-2">
                            <a href="#"><img src="@item.Logo" alt="@item.Name"></a>
                            <div class="ceb-infor">
                                <h2><a href="#">@Html.DisplayFor(modelItem => item.Name )</a></h2> <br>
                                <p>@Html.DisplayFor(modelItem => item.Description )</p>
                            </div>
                        </div>
                        <div style="float:right">
                            <a class="btn btn-outline-primary"><i class="fa fa-pencil"></i>Edit</a> |
                            <a class="btn btn-outline-info"><i class="fa fa-eye"></i>Details</a> |
                            <a class="btn btn-outline-danger"><i class="fa fa-trash"></i>Edit</a>
                        </div>
                    </div>
             
                }
            </div>
        </div>
    </div>
</div>
<!-- end of cinemas section-->
