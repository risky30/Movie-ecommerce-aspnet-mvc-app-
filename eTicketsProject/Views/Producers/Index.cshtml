@*
    Producer
*@

@model IEnumerable<Producer>

@{
    ViewData["Title"] = "List of Producers";
}
<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1>Producers</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="#">Home</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> Producers listing</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- producers list section-->
<div class="page-single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="ceb-item-style-2">
                            <a href="#"><img src="@item.ProfilePictureURL" alt="@item.FullName"></a>
                            <div class="ceb-infor">
                                <h2><a href="#">@Html.DisplayFor(modelItem => item.FullName )</a></h2> <br>
                                <p>@Html.DisplayFor(modelItem => item.Bio )</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- end of producers section-->
